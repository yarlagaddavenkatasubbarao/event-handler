@model ISC567Web.Models.EventCategory

@{
    ViewData["Title"] = "Create";
}

<h2>Create New Event</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventCategoryLogo" class="control-label"></label>
                <input asp-for="EventCategoryLogo" class="form-control" />
                <span asp-validation-for="EventCategoryLogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

