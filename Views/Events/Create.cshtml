@model ISC567Web.Models.Event

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventLocation" class="control-label"></label>
                <input asp-for="EventLocation" class="form-control" />
                <span asp-validation-for="EventLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventLogo" class="control-label"></label>
                <input asp-for="EventLogo" class="form-control" />
                <span asp-validation-for="EventLogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Promotional" /> @Html.DisplayNameFor(model => model.Promotional)
                    </label>
                </div>
            </div>
            <div class="form-group">
                @*<label asp-for="CategoryID" class="control-label"></label>*@
                @*@Html.DropDownListFor(x => x.CategoryID, new SelectList(Enum.GetValues(typeof(Categories))), "Select Category");*@
                @*<input asp-for="CategoryID" class="form-control" />*@
                <select asp-for="EventCategoryID" class="form-control">
                    <option>Select Category</option>
                    <option value="1">Tourism</option>
                    <option value="2">Arts And Culture</option>
                    <option value="3">Entertainment</option>
                    <option value="4">Fundraisers</option>
                    <option value="5">KidsActivities</option>
                    <option value="6">SportsAndOutdoors</option>
                </select>
                <span asp-validation-for="EventCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvertiserID" class="control-label"></label>
                <select asp-for="AdvertiserID" class ="form-control" asp-items="ViewBag.CompanyID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
